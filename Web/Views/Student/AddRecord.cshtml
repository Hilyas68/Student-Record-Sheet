@model Domain.Entities.Student
@{
    ViewBag.Title = "AddRecord";
}

<h2>Add Record</h2>

@using (Html.BeginForm("AddRecord", "Student", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class="bold" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
       
    </div>

    <div class="form-group">
        <label class="bold">Departments</label>
        <select class="form-control" name="departmentId" id="departmentId">
            <option value="-1">---Select Deparment---</option>
            @foreach (var dept in ViewBag.Depts)
            {
                <option value="@dept.Id">@dept.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label class="bold">Courses</label>
        <select class="form-control" name="courseId" id="courseId">
            <option value="-1">---Select Course---</option>
            @foreach (var course in ViewBag.Courses)
            {
                <option value="@course.Id">@course.Title</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label class="bold">Grade</label>
        <select class="form-control" name="gradeId" id="gradeId">
            <option value="-1">---Select Grade---</option>
            @foreach (var grade in ViewBag.Grade)
            {
                <option value="@grade.Id">@grade.Type</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

